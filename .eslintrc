{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "commonjs": true,
    "mocha": true
  },
  "root": true,
  "extends": ["airbnb", "prettier"],
  "globals": {
    "__SERVER__": true
  },
  "plugins": ["prettier", "react"],
  "rules": {
    "semi": 0,
    "quotes": 0,
    "comma-dangle": 0,
    "curly": [2, "multi-line"],
    "arrow-parens": 0,
    "class-methods-use-this": 0,
    "symbol-description": 0,
    "no-unused-vars": [2, { "varsIgnorePattern": "^_+$" }],
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "no-confusing-arrow": 0,
    "no-else-return": 0,
    "react/sort-comp": 0,
    "react/jsx-filename-extension": 0,
    "react/forbid-prop-types": 0,
    "no-prototype-builtins": 0,
    "no-duplicate-imports": 0,
    "prettier/prettier": 1,
    "no-restricted-syntax": [
      "error",
      "ForOfStatement",
      "LabeledStatement",
      "WithStatement"
    ]
  }
}
